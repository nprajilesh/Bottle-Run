public class Test {
	public BaseGameActivity activity;
	public BitmapTextureAtlas playerTexture;
    public BitmapTextureAtlas bottleTexture;
    public PixelPerfectTiledTextureRegion playerRegion;
    public PixelPerfectTextureRegion bottleRegion;
    
	
	public Test(BaseGameActivity activity){
		this.activity=activity;
	}
	public void loadPixels(){
		
        this.playerTexture = new BitmapTextureAtlas(2048, 128, TextureOptions.BILINEAR_PREMULTIPLYALPHA);
        this.playerRegion = PixelPerfectTextureRegionFactory.createTiledFromAsset(playerTexture, activity, "gfx/game/player.png", 0, 0, 2, 1);

	}

