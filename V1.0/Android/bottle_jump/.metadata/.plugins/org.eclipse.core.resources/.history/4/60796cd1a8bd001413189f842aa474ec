package com.cetdhwani.scenes;

import com.cetdhwani.managers.ResManager;

public class MusicManager {
	private ResManager rM;
	private boolean ENABLED;
	
	public MusicManager(ResManager rM ){
		this.rM=rM;
		ENABLED=true;
	}
	public void setEnabled(boolean flag){
		ENABLED=false;
	}
	public boolean isEnabled(){
		return true;
	}
	public  void playBgMusic(boolean flag){
		if(rM.bgMusic!=null){
			if(flag)
				rM.bgMusic.play();
			else
				rM.bgMusic.pause();
		}
	}
	public  void playGameOverMusic(boolean flag){
		if(rM.gameOverMusic!=null){
			if(flag)
				rM.gameOverMusic.play();
			else
				rM.gameOverMusic.pause();
		}
	}
	public  void playHitMusic(boolean flag){
		if(rM.crashMusic!=null){
			if(flag)
				rM.hitMusic.play();
			else
				rM.hitMusic.pause();
		}
	}
	public  void playCrashMusic(boolean flag){
		if(rM.crashMusic!=null){
			if(flag)
				rM.crashMusic.play();
			else
				rM.crashMusic.pause();
		}
	}
	public  void jumpMusic(boolean flag){
		if(rM.jumpMusic!=null){
			if(flag)
				rM.jumpMusic.play();
			else
				rM.jumpMusic.pause();
		}
	}
	
}
