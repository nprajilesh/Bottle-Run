package com.cetdhwani.scenes;

import org.andengine.audio.music.Music;
import org.andengine.audio.music.MusicFactory;
import org.andengine.engine.Engine;

import com.cetdhwani.managers.ResManager;

public class MusicManager {
	private ResManager rM;
	private boolean ENABLED;
	private Engine engine;
	public Music jumpMusic,gameOverMusic,bgMusic,hitMusic, pointMusic,crashMusic,vanStopMusic,vanStartMusic,vanRunMusic;
	public MusicManager(ResManager rM ){
		this.rM=rM;
		ENABLED=true;
	}
	public void setEnabled(boolean flag){
		ENABLED=false;
	}
	public boolean isEnabled(){
		return true;
	}
	public  void playBgMusic(boolean flag){
		if(rM.bgMusic!=null){
			if(flag)
				rM.bgMusic.play();
			else
				rM.bgMusic.pause();
		}
	}
	public  void playGameOverMusic(boolean flag){
		if(rM.gameOverMusic!=null){
			if(flag)
				rM.gameOverMusic.play();
			else
				rM.gameOverMusic.pause();
		}
	}
	public  void playHitMusic(boolean flag){
		if(rM.crashMusic!=null){
			if(flag)
				rM.hitMusic.play();
			else
				rM.hitMusic.pause();
		}
	}
	public  void playCrashMusic(boolean flag){
		if(rM.crashMusic!=null){
			if(flag)
				rM.crashMusic.play();
			else
				rM.crashMusic.pause();
		}
	}
	public  void jumpMusic(boolean flag){
		if(rM.jumpMusic!=null){
			if(flag)
				rM.jumpMusic.play();
			else
				rM.jumpMusic.pause();
		}
	}
	public void loadMusic(){
		try {
			jumpMusic = MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/jump.ogg");
			hitMusic = MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/hit.ogg");
			pointMusic = MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/point.ogg");
			crashMusic = MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/bottlecrash.ogg");
			gameOverMusic = MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/gameover.ogg");
			vanStopMusic = MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/vanstop1.ogg");
			vanStartMusic = MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/vanstart1.ogg");
			vanRunMusic = MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/vanrun.ogg");

			bgMusic=MusicFactory.createMusicFromAsset(
					engine.getMusicManager(), activity, "sound/bgium.wav");


		} catch (Exception e) {
			// TODO Auto-generated catch block

			e.printStackTrace();
		}

	}
	
}
