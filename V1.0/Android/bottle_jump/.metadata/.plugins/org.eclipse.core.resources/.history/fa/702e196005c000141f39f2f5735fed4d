import com.qwerjk.andengine.entity.sprite.PixelPerfectSprite;
import com.qwerjk.andengine.opengl.texture.region.PixelPerfectTextureRegion;
import com.qwerjk.andengine.opengl.texture.region.PixelPerfectTextureRegionFactory;
import com.qwerjk.andengine.opengl.texture.region.PixelPerfectTiledTextureRegion;

import android.graphics.Color;
import android.graphics.Typeface;
import android.widget.Toast;



public class Test {
	public BaseGameActivity activity;
	public BitmapTextureAtlas playerTexture;
	public final int BOTTLES=5;
    public BitmapTextureAtlas bottleTexture[];
    public PixelPerfectTiledTextureRegion playerRegion;
    public PixelPerfectTextureRegion bottleRegion[];
    public Engine engine;
	public Test(BaseGameActivity activity,Engine engine){
		this.activity=activity;
		this.engine=engine;
		this.bottleRegion=new PixelPerfectTextureRegion[BOTTLES];
		this.bottleTexture=new BitmapTextureAtlas [BOTTLES];
	}
	public void loadPixels(){		
        playerTexture = new BitmapTextureAtlas(128, 128, TextureOptions.BILINEAR_PREMULTIPLYALPHA);
        playerRegion = PixelPerfectTextureRegionFactory.createTiledFromAsset(playerTexture, activity, "gfx/game/player.png", 0, 0, 2, 1);
        engine.getTextureManager().loadTexture(playerTexture);
        for(int i=0;i<BOTTLES;++i){
        bottleTexture[i] = new BitmapTextureAtlas(128, 128, TextureOptions.BILINEAR_PREMULTIPLYALPHA);
        bottleRegion[i] = PixelPerfectTextureRegionFactory.createFromAsset(bottleTexture[i] , activity, "gfx/game/bottle.png", 0, 0);
        engine.getTextureManager().loadTexture(bottleTexture[i] );
        }
	}

}
